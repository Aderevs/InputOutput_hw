<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="ContentToSave" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="135" FontSize="20" Margin="0,184,0,0"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,349,0,0" VerticalAlignment="Top" Height="38" Width="98" Click="SaveDataInIsolatedStorage"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,153,0,0" TextWrapping="Wrap" Text="Text for save in isolated storage:" VerticalAlignment="Top" Width="294" FontSize="20"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap" Text="Name of a file to create:" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="FileNameText" HorizontalAlignment="Center" Margin="0,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169"/>

    </Grid>
</Window>
